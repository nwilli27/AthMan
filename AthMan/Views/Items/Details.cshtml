@model Item
@{
    ViewBag.Title = "Item Details";
}

<div class="text-center">
    <h1 class="display-3" style="margin-top: 65px">Item Details</h1>
    <p class="lead">@Model.Name (@Model.ItemCode)</p>
</div>

<div class="row justify-content-center">
    <div class="col-sm-8">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Code:</td>
                <td>@Model.ItemCode</td>
            </tr>
            <tr>
                <td>Yearly Price:</td>
                <td>@Model.YearlyPrice.Value.ToString("C2")</td>
            </tr>
            <tr>
                <td>Release Date:</td>
                <td>@Model.ReleaseDate.ToShortDateString()</td>
            </tr>
        </table>
        <a asp-controller="Items" asp-action="Edit" class="btn btn-primary"
           asp-route-id="@Model.ItemID"><span class="fas fas fa-edit"></span> Edit</a>
        <a asp-controller="Items" asp-action="Delete" class="btn btn-danger"
           asp-route-id="@Model.ItemID"><span class="fas fa-minus"></span> Delete</a>
        <a asp-controller="Items" asp-action="Index" class="btn btn-primary mb-5 float-right">Cancel</a>
    </div>
</div>