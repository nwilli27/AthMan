@model Item
@{
    string title = ViewBag.Action + " Item";
    ViewBag.Title = title;
}

<div class="text-center">
    <h1 class="display-3" style="margin-top: 65px">@ViewBag.Title</h1>
</div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="@Model.ItemCode">Code</label>
        <input asp-for="@Model.ItemCode" class="form-control" />
        <span asp-validation-for="@Model.ItemCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.YearlyPrice">Yearly Price</label>
        <input asp-for="@Model.YearlyPrice" class="form-control" />
        <span asp-validation-for="@Model.YearlyPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ReleaseDate">Relase Date</label>
        <input asp-for="@Model.ReleaseDate" class="form-control" type="date"/>
        <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="@Model.ItemID" />

    <button type="submit" class="btn btn-primary mb-5">@ViewBag.Action</button>
    <a asp-controller="Items" asp-action="Index" class="btn btn-primary mb-5">Cancel</a>

</form>
