@model Item
@{
    ViewBag.Title = "Delete Item";
}

<div class="text-center">
    <h1 class="display-3" style="margin-top: 65px">Confirm Deletion</h1>
    <p class="lead">Item: @Model.Name (@Model.ItemCode)</p>
</div>

<form asp-action="Delete" method="post" class="text-center">
    <input type="hidden" asp-for="ItemID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Items" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>