@model List<Employee>
@{
    ViewBag.Title = "Employee List";
}

<div class="text-center">
    <h1 class="display-3" style="margin-top: 65px">Employee List</h1>
</div>

<a asp-controller="Employees" asp-action="Add" class="btn btn-success mb-2"><span class="fas fa-plus"></span> Add New Employee</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Employees" asp-action="Details" class="text-dark"
                       asp-route-id="@employee.EmployeeID">@employee.Name</a>
                </td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>
                    <a asp-controller="Employees" asp-action="Edit" class="btn btn-primary"
                       asp-route-id="@employee.EmployeeID"><span class="fas fas fa-edit"></span></a>
                    <a asp-controller="Employees" asp-action="Delete" class="btn btn-danger"
                       asp-route-id="@employee.EmployeeID"><span class="fas fa-minus"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>