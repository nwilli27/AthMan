@model Employee
@{
    ViewBag.Title = "Delete Employee";
}

<div class="text-center">
    <h1 class="display-3" style="margin-top: 65px">Confirm Deletion</h1>
    <p class="lead">Employee: @Model.Name</p>
</div>

<form asp-action="Delete" method="post" class="text-center">
    <input type="hidden" asp-for="EmployeeID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Employees" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>